<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kader.BerandakaderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@drawable/bg_beranda"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="35dp">

            <ImageView
                android:id="@+id/imgkader_keluar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgkader_keluar"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="-1dp"
                android:fontFamily="@font/monserratmedium"
                android:text="Keluar"
                android:textColor="#ffffff"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/nama_posyandu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monserratbold"
                android:text="Posyandu Anggrek 1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_17ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_55sdp"
                android:fontFamily="@font/monserratregular"
                android:text="Kader"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Halo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/monserratregular"
                    android:text="Halo"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text=","
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/namakader_posyandu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/monserratregular"
                    android:text="Ibu Meita"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_13ssp" />


            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monserratbold"
        android:text="Beranda Kader"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_35sdp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_margin="@dimen/_5sdp"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="@dimen/_12sdp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgorangtua_anak"
                        android:src="@drawable/boy"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"/>
                    <TextView
                        android:fontFamily="@font/monserratbold"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/black"
                        android:text="Anak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="@dimen/_12sdp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_kartuanak"
                        android:src="@drawable/kartu"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"/>
                    <TextView
                        android:fontFamily="@font/monserratbold"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_13ssp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Daftar Kartu\n Anak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="@dimen/_12sdp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_jadwalposyandu"
                        android:src="@drawable/calendar"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"/>
                    <TextView
                        android:fontFamily="@font/monserratbold"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center"
                        android:text="Jadwal \nPosyandu "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="@dimen/_12sdp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_orangtua"
                        android:src="@drawable/parents"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"/>
                    <TextView
                        android:fontFamily="@font/monserratbold"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center"
                        android:text="Orangtua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</LinearLayout>