<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.bidan.GrafikPertumbuhanActivity">

    <LinearLayout
        android:id="@+id/toolbar_grafiktumbuh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/bg_kesehatananak"
        android:orientation="horizontal"
        android:padding="@dimen/_15sdp">

        <ImageView
            android:id="@+id/btn_kembaligrafiktumbuh"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/monserratbold"
                android:text="Grafik Pertumbuhan"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />
            <TextView
                android:id="@+id/grafiktumbuh_namaAnak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/monserratbold"
                android:text="Budi Doremi "
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />


        </LinearLayout>



    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grafiktumbuh_tablayout"/>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:id="@+id/grafiktumbuh_viewpager2"/>

    <Button
        android:id="@+id/btn_statusgizi"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_margin="@dimen/_15sdp"
        android:fontFamily="@font/interbold"
        android:text="Status Gizi Anak"
        android:textAllCaps="false"
        android:textSize="@dimen/_12ssp"/>

</LinearLayout>