<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    tools:context=".ui.PencarianActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_caritologin"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="@dimen/_157sdp"
            android:layout_height="@dimen/_169sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_svgpencarian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pencarian Data Peserta Posyandu "
            android:fontFamily="@font/interbold"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/intermedium"
            android:text="Silahkan masukkan nama lengkap dan nomor NIK peserta yang ingin di daftarkan pada aplikasi "
            android:textAlignment="center"
            android:textColor="#838391"
            android:textSize="@dimen/_12ssp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pencarian_namalengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_nama_pengguna"
            app:startIconTint="#003399"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Lengkap"
                android:inputType="text"
                android:fontFamily="@font/intermedium"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pencarian_nik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_baseline_how_to_reg_24"
            app:startIconTint="#003399"
            app:boxStrokeWidthFocused="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIK ( Nomor Induk Kependudukan )"
                android:inputType="number"
                android:fontFamily="@font/intermedium"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pencarian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/interbold"
            android:textSize="@dimen/_12ssp"
            android:text="Cari"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>