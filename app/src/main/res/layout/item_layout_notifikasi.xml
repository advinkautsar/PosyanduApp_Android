<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_notif"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_notifications_active_24"
            app:tint="#003399" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_titlenotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:fontFamily="@font/monserratbold"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Jadwal Imunisasi Anak"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/txt_contentnotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/monserratregular"
            android:text="Halo ibu diah, imunisasi anak campak selanjutnya mulai tanggal : 12 Februari 2022"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>